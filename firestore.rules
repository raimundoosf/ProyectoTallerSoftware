rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId)
        && request.resource.data.keys().hasOnly(['role', 'uid', 'updatedAt'])
        && request.resource.data.role is string
        && request.resource.data.uid == userId;
    }

    match /consumers/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /businesses/{userId} {
      // Permitir lectura a cualquier usuario autenticado (para búsqueda de empresas)
      allow read: if isAuthenticated();
      // Solo el propietario puede escribir
      allow write: if isOwner(userId);
      
      // Subcolección de certificaciones del Pasaporte Digital
      match /certifications/{certificationId} {
        // Permitir lectura a cualquier usuario autenticado
        allow read: if isAuthenticated();
        // Solo el propietario del negocio puede escribir sus certificaciones
        allow write: if isOwner(userId);
      }
    }

    // Productos: permitimos que la empresa (companyId) cree/edite sus productos
    // Cada documento de `products` debe incluir el campo `companyId` con el
    // UID del propietario. Solo ese UID podrá crear/actualizar/borrar.
    match /products/{productId} {
      // Lectura pública (ajusta si quieres restringirla)
      allow read: if true;

      // Crear y actualizar: verificar que el companyId coincida con el usuario autenticado
      allow create, update: if isAuthenticated() &&
        request.resource.data.companyId == request.auth.uid;

      // Eliminar: verificar que el documento existente pertenezca al usuario autenticado
      allow delete: if isAuthenticated() &&
        resource.data.companyId == request.auth.uid;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
